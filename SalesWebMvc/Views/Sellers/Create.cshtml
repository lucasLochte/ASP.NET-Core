@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row"><!--garantir que minha div ocupe a largura da tela-->
    <div class="col-md-4">
        <!--dividindo a tela em 3-->
        <form asp-action="Create">
            <!--action post-->
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="Seller.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="Seller.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="Seller.BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="Seller.BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>


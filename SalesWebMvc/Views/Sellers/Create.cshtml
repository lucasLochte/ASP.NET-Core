@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row"><!--garantir que minha div ocupe a largura da tela-->
    <div class="col-md-4">
        <!--dividindo a tela em 3-->
        <form asp-action="Create">
            <!--action post-->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label><!-- define o label que vai aparecer na caixinha que vou digitar-->
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

